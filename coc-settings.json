{
  "languageserver": {
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "gopls": {
          "analyses": {
            "unusedparams": true,
            "shadow": true
          },
          "staticcheck": true
        }
      }
    }
  },
  "sumneko-lua.enableNvimLuaDev": true,
}
